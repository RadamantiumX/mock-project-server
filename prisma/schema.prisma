generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  nickname String?
  email String @unique
  password String @db.VarChar(255)
  createdAt DateTime @default(now())
  post Post[]
  likes Like[]
  dislikes Dislike[]
}

model Post {
  id Int @id @default(autoincrement())
  content String
  author User @relation(fields: [authorId], references: [id])
  authorId Int 
  createdAt DateTime @default(now())
  videoId String
}

model Like {
  id Int @id @default(autoincrement())
  videoId String
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  createdAt DateTime @default(now())
}

model Dislike {
  id Int @id @default(autoincrement())
  videoId String
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  createdAt DateTime @default(now())
}

